<style>
  .ctn-home-tech {
    width: 100%;
    min-height: 100dvh;

    position: relative;
    z-index: 30;
    background-color: var(--bg-color-main);
    overflow: hidden;

    padding: 0 24px;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;

    position: sticky;
    top: 0;
  }
  .ctn-home-tech::before {
    content: "";
    position: absolute;
    inset: 0;
    z-index: -1;

    background-image: url(../assets/gradients/home-gradient-tech-sm.svg);
    background-position: center;
    background-size: cover;
    opacity: 0.7;
  }

  .home-tech__title-txt {
    color: var(--txt-color-t);
    font-size: 30px;
    font-weight: 500;
    text-align: left;
    text-wrap: pretty;
  }

  .home-tech__sliders-general-ctn {
    display: flex;
    flex-direction: column;
    gap: 40px;
  }

  .home-tech__slider {
    width: 100%;
    display: inline-flex;
    position: relative;
  }

  .home-tech__slider::after {
    content: "";
    width: calc(100% + 48px);
    height: 1px;

    position: absolute;
    margin-inline: auto;
    left: -24px;
    bottom: 0;

    background-image: linear-gradient(
      90deg,
      hsla(0, 0%, 56%, 0.171) 0%,
      hsl(344deg 0% 88%) 28%,
      hsl(300deg 100% 100%) 52%,
      hsl(344deg 0% 88%) 76%,
      hsla(0, 0%, 56%, 0.171) 100%
    );

    opacity: 0.8;
  }
  .home-tech__slider-list {
    list-style: none;

    --width: 40px;
    --height: 40px;
    --i-gap: 50px;

    width: 100%;
    min-width: calc(
      var(--width) * var(--quantity) + (var(--quantity) * var(--i-gap))
    );
    display: flex;
    gap: var(--i-gap);

    animation: infinite-slider 28s linear infinite;
    animation-play-state: var(--hover-animation);

    padding: 24px 0;
  }
  [data-reverse] {
    animation-name: infinite-slider-reverse;
    animation-duration: 40s;
  }

  .home-tech__slider:hover {
    .home-tech__slider-list {
      animation-play-state: paused;
    }
  }

  .home-tech__slider-item {
    width: var(--width);
    height: var(--height);

    svg {
      width: 100%;
      height: 100%;
    }
  }

  .home-tech__paragraph-ctn {
    display: flex;
    justify-content: center;
  }
  .home-tech__paragraph-txt {
    width: 338px;
    color: var(--txt-color-p);
    font-size: 18px;
    text-align: center;
    font-weight: 400;
    text-wrap: pretty;
  }

  @keyframes infinite-slider {
    0% {
      transform: translateX(0px);
    }
    100% {
      transform: translateX(
        calc(
          (var(--width) * var(--quantity) + (var(--quantity) * var(--i-gap))) *
            -1
        )
      );
    }
  }

  @keyframes infinite-slider-reverse {
    0% {
      transform: translateX(
        calc(
          (var(--width) * var(--quantity) + (var(--quantity) * var(--i-gap))) *
            -1
        )
      );
    }
    100% {
      transform: translateX(0px);
    }
  }

  /* MEDIA QUERIES*/
  @media screen and (width >= 700px) {
    .ctn-home-tech::before {
      background-image: url(../assets/gradients/home-gradient-tech-md.svg);
      opacity: 0.85;
    }

    .ctn-home-tech {
      padding: 0 34px;
    }

    .home-tech__slider::after {
      height: 1.5px;

      background-image: linear-gradient(
        90deg,
        hsla(0, 0%, 56%, 0.041) 0%,
        hsl(344deg 0% 88%) 28%,
        hsl(300deg 100% 100%) 52%,
        hsl(344deg 0% 88%) 76%,
        hsla(0, 0%, 56%, 0.041) 100%
      );

      opacity: 0.8;
    }

    .home-tech__paragraph-ctn {
      display: flex;
      justify-content: left;
    }
    .home-tech__paragraph-txt {
      text-align: left;
    }

    .home-tech__title-ctn {
      display: flex;
      justify-content: center;
    }
    .home-tech__title-txt {
      text-align: center;
      font-size: 40px;
      width: 400px;
    }

    .home-tech__sliders-general-ctn {
      gap: 70px;
    }

    .home-tech__slider-list {
      --width: 58px;
      --height: 58px;
      --i-gap: 80px;

      padding: 28px 0;
    }

    .home-tech__paragraph-txt {
      width: 430px;
      font-size: 24px;
    }
  }
  @media screen and (width >= 1200px) {
    .ctn-home-tech::before {
      background-image: url(../assets/gradients/home-gradient-tech-lg.svg);
      background-position: center;
      background-size: cover;
      opacity: 0.75;
    }
    .ctn-home-tech {
      padding: 0 80px;
    }

    .home-tech__title-txt {
      font-size: 50px;
      width: 500px;
    }

    .home-tech__sliders-general-ctn {
      gap: 100px;
    }

    .home-tech__slider-list {
      --width: 68px;
      --height: 68px;
      --i-gap: 100px;

      padding: 40px 0;
    }

    .home-tech__paragraph-txt {
      text-align: left;
      width: 540px;
      font-size: 30px;
    }
  }
</style>

<script>
  const ctn_slider_one = document.querySelector("#slider-one");
  const ctn_slider_list = document.querySelector("#slider-one-list");
  const vw = window.innerWidth;

  addEventListener("load", (e) => {
    if (!ctn_slider_list) return;

    const listWidth =
      parseInt(getComputedStyle(ctn_slider_list).getPropertyValue("width")) / 2;
    const sliderListNumber = Math.round(vw / listWidth);

    for (let index = 0; index < sliderListNumber; index++) {
      const newList = ctn_slider_list.cloneNode(true) as Element;
      newList?.setAttribute("aria-hidden", "true");

      ctn_slider_one?.appendChild(newList);
    }
  });
</script>
